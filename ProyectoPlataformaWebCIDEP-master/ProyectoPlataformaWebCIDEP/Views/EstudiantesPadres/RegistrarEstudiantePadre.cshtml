@model ProyectoPlataformaWebCIDEP.Entity.EstudianteGradoEntity

@{
    Layout = "~/Views/Shared/_Authenticated.cshtml";
    ViewBag.VistaActiva = "Administracion";
}


<div class="container">
    <section id="contact">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-sm-12">
                    @using (Html.BeginForm("RegistrarEstudiantePadre", "EstudiantesPadres", FormMethod.Post))
                    {
                        <div class="section-title text-center">
                            <h2>Relacionar Padre con un Estudiante</h2>
                        </div>

                        <div class="row">
                            <div class="col-md-6 col-sm-12" style="padding: 0.5rem;">
                                <label for="filtroPadre">Filtrar Padre:</label>
                                <input id="txtFiltroPadre" type="text" class="form-control" placeholder="Ingrese su búsqueda">
                            </div>
                            <div class="col-md-6 col-sm-12" style="padding: 0.5rem;">
                                <label for="Padre">Padre:</label>
                                @Html.DropDownList("ID_Padre", ViewBag.ListaPadres as SelectList, "Seleccione el padre", new { @class = "form-control", @required = "required", @id = "ddlPadre" })
                            </div>
                            <div class="col-md-6 col-sm-12" style="padding: 0.5rem;">
                                <label for="filtroEstudiante">Filtrar Estudiante:</label>
                                <input id="txtFiltroEstudiante" type="text" class="form-control" placeholder="Ingrese su búsqueda">
                            </div>
                            <div class="col-md-6 col-sm-12" style="padding: 0.5rem;">
                                <label for="Estudiante">Estudiante:</label>
                                @Html.DropDownList("ID_Estudiante", ViewBag.ListaEstudiantes as SelectList, "Seleccione el estudiante", new { @class = "form-control", @required = "required", @id = "ddlEstudiante" })
                            </div>
                        </div>

                        <div class="row justify-content-center align-items-center">
                            <div class="col-12 text-center" style="padding: 0.5rem;">
                                <input type="submit" class="btn btn-primary" value="Registrar">
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
</div>

<script>
    $(document).ready(function () {
        $('#txtFiltroPadre').on('input', function () {
            var filtro = $(this).val().toLowerCase();
            $('#ddlPadre option').each(function () {
                var opcion = $(this).text().toLowerCase();
                var mostrar = opcion.includes(filtro);
                $(this).toggle(mostrar);
            });
        });

        $('#txtFiltroEstudiante').on('input', function () {
            var filtro = $(this).val().toLowerCase();
            $('#ddlEstudiante option').each(function () {
                var opcion = $(this).text().toLowerCase();
                var mostrar = opcion.includes(filtro);
                $(this).toggle(mostrar);
            });
        });
    });
</script>

