@model ProyectoPlataformaWebCIDEP.Entity.AsistenciaEntity

@{
    Layout = "~/Views/Shared/_Authenticated.cshtml";
    ViewBag.VistaActiva = "Asistencia";
}

<div class="container">
    <section id="contact">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-sm-12">
                    @using (Html.BeginForm("EditarAsistencia", "Asistencia", FormMethod.Post))
                    {
                        <div class="section-title text-center">
                            <h2> Editar Asistencia </h2>
                        </div>
                        <div class="row">
                            @Html.TextBoxFor(m => m.ID_Asistencia, new { @class = "form-control", @placeholder = "", @type = "hidden" })
                            @Html.TextBoxFor(m => m.ID_Estudiante, new { @class = "form-control", @placeholder = "", @type = "hidden" })


                            <div class="col-md-6 col-sm-12" style="padding: 0.5rem;">
                                <label for="Curso">Estudiante:</label>
                                @Html.DropDownList("ID_Estudiante", ViewBag.ListaEstudiantesGrados as SelectList, "Seleccione el estudiante", new { @class = "form-control", @required = "required", @disabled = "disabled" })
                            </div>
                            <div class="col-md-6 col-sm-12" style="padding: 0.5rem;">
                                <label for="ID_Estado">Estado de Asistencia:</label>
                                @Html.DropDownList("ID_Estado", ViewBag.ListaEstadosAsistencia as SelectList, "Seleccione el Estado", new { @class = "form-control", @required = "required" })
                            </div>

                            <div class="col-12 text-center" style="padding: 0.5rem;">
                                <input type="submit" class="btn btn-primary" value="Editar">
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
</div>