@model ProyectoPlataformaWebCIDEP.Entity.CalificacionEntity

@{
    Layout = "~/Views/Shared/_Authenticated.cshtml";
    ViewBag.VistaActiva = "Calificaciones";
}

<div class="container">
    <section id="contact">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-sm-12">
                    @using (Html.BeginForm("EditarCalificacion", "Calificaciones", FormMethod.Post))
                    {
                        <div class="section-title text-center">
                            <h2>Editar calificación</h2>
                        </div>
                        @Html.TextBoxFor(m => m.ID_Calificacion, new { @class = "form-control", @placeholder = "Retroalimentación", @type = "hidden" })
                        @Html.TextBoxFor(m => m.ID_Estudiante, new { @class = "form-control", @placeholder = "", @type = "hidden" })
                        @Html.TextBoxFor(m => m.ID_Clase, new { @class = "form-control", @placeholder = "", @type = "hidden" })


                        <div class="row">
                            <div class="col-md-6 col-sm-12" style="padding: 0.5rem;">
                                <label for="Curso">Filtrar Estudiante:</label>
                                <input id="txtFiltroEstudiante" type="text" class="form-control" placeholder="Ingrese su búsqueda" readonly>
                            </div>
                            <div class="col-md-6 col-sm-12" style="padding: 0.5rem;">
                                <label for="Curso">Estudiante:</label>
                                @Html.DropDownList("ID_Estudiante", ViewBag.ListaEstudiantesGrados as SelectList, "Seleccione el estudiante", new { @class = "form-control", @required = "required", @id = "ddlEstudiante", @disabled = "disabled" })
                            </div>
                            <div class="col-md-6 col-sm-12" style="padding: 0.5rem;">
                                <label for="Clase">Clase:</label>
                                @Html.DropDownList("ID_Clase", ViewBag.ListaClases as SelectList, "Seleccione la clase", new { @class = "form-control", @required = "required", @disabled = "disabled" })
                            </div>
                            <div class="col-md-6 col-sm-12" style="padding: 0.5rem;">
                                <label for="Calificacion">Calificación Obtenida:</label>
                                @Html.TextBoxFor(m => m.Calificacion, new { @class = "form-control", @placeholder = "Calificación Obtenida", @type = "text" })
                            </div>
                            <div class="col-md-6 col-sm-12" style="padding: 0.5rem;">
                                <label for="TipoEvaluacion">Tipo de Evaluación:</label>
                                @Html.DropDownList("ID_TipoEvaluacion", ViewBag.ListaEvaluaciones as SelectList, "Seleccione el Tipo de Evaluación", new { @class = "form-control", @required = "required" })
                            </div>
                            <div class="col-md-6 col-sm-12" style="padding: 0.5rem;">
                                <label for="Porcentaje">Porcentaje Total de la Evaluación:</label>
                                @Html.TextBoxFor(m => m.PorcentajeTotal, new { @class = "form-control", @placeholder = "Porcentaje Total de la Evaluación", @type = "number" })
                            </div>
                            <div class="col-md-12 col-sm-12" style="padding: 0.5rem;">
                                <label for="Retroalimentacion">Retroalimentación:</label>
                                @Html.TextBoxFor(m => m.Retroalimentacion, new { @class = "form-control", @placeholder = "Retroalimentación", @type = "text" })
                            </div>
                            <div class="col-12 text-center" style="padding: 0.5rem;">
                                <input type="submit" class="btn btn-primary" value="Editar">
                            </div>
                        </div>
                    }


                </div>
            </div>
        </div>
    </section>
</div>

<script>
    $(document).ready(function () {
        $('#txtFiltroEstudiante').on('input', function () {
            var filtro = $(this).val().toLowerCase();
            $('#ddlEstudiante option').each(function () {
                var opcion = $(this).text().toLowerCase();
                var mostrar = opcion.includes(filtro);
                $(this).toggle(mostrar);
            });
        });
    });
</script>
