@model ProyectoPlataformaWebCIDEP.Entity.EstudianteGradoEntity

@{
    Layout = "~/Views/Shared/_Authenticated.cshtml";
    ViewBag.VistaActiva = "Administracion";
}


<div class="container">
    <section id="contact">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-sm-12">
                    @using (Html.BeginForm("RegistrarDocenteClase", "DocentesClases", FormMethod.Post))
                    {
                        <div class="section-title text-center">
                            <h2>Relacionar Docente con una Clase</h2>
                        </div>

                        <div class="row">
                            <div class="col-md-6 col-sm-12" style="padding: 0.5rem;">
                                <label for="filtroDocente">Filtrar Docente:</label>
                                <input id="txtFiltroDocente" type="text" class="form-control" placeholder="Ingrese su búsqueda">
                            </div>
                            <div class="col-md-6 col-sm-12" style="padding: 0.5rem;">
                                <label for="Estudiante">Docente:</label>
                                @Html.DropDownList("ID_Docente", ViewBag.ListaDocentes as SelectList, "Seleccione el docente", new { @class = "form-control", @required = "required", @id = "ddlDocente" })
                            </div>
                            <div class="col-md-6 col-sm-12" style="padding: 0.5rem;">
                                <label for="filtroGrado">Filtrar Clase:</label>
                                <input id="txtFiltroClase" type="text" class="form-control" placeholder="Ingrese su búsqueda">
                            </div>
                            <div class="col-md-6 col-sm-12" style="padding: 0.5rem;">
                                <label for="Clase">Clase:</label>
                                @Html.DropDownList("ID_Clase", ViewBag.ListaClases as SelectList, "Seleccione la clase", new { @class = "form-control", @required = "required", @id = "ddlClase" })
                            </div>
                        </div>

                        <div class="row justify-content-center align-items-center">
                            <div class="col-12 text-center" style="padding: 0.5rem;">
                                <input type="submit" class="btn btn-primary" value="Registrar">
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
</div>

<script>
    $(document).ready(function () {
        $('#txtFiltroDocente').on('input', function () {
            var filtro = $(this).val().toLowerCase();
            $('#ddlDocente option').each(function () {
                var opcion = $(this).text().toLowerCase();
                var mostrar = opcion.includes(filtro);
                $(this).toggle(mostrar);
            });
        });

        $('#txtFiltroClase').on('input', function () {
            var filtro = $(this).val().toLowerCase();
            $('#ddlClase option').each(function () {
                var opcion = $(this).text().toLowerCase();
                var mostrar = opcion.includes(filtro);
                $(this).toggle(mostrar);
            });
        });
    });
</script>

