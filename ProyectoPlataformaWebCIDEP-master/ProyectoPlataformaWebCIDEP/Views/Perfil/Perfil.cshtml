@model ProyectoPlataformaWebCIDEP.Models.PerfilModel

@{
    ViewBag.Title = "Main";
    Layout = "~/Views/Shared/_Authenticated.cshtml";
}

@if (Model.perfil != null)
{
    <div class="container">
        <section>
            <div class="container py-5">
                <div class="row justify-content-center">
                    <!-- Alerta de éxito -->
                    @if (!string.IsNullOrEmpty(ViewBag.respuesta))
                    {
                        <div class="col-md-8 offset-md-2">
                            <div id="alerta" class="alert alert-info alert-dismissible fade show text-center" role="alert">
                                @Html.Raw(ViewBag.respuesta)
                            </div>
                        </div>
                    }

                    <script>
                        $(document).ready(function () {
                            setTimeout(function () {
                                $("#alerta").alert('close');
                            }, 5000);
                        });
                    </script>
                </div>

                <div class="row justify-content-center">
                    @if (Model.perfil.ID_Rol == 1)
                    {
                        <div class="col-lg-4 d-flex align-items-stretch" id="tarjetaPerfil">
                            <div class="card mb-4 w-100">
                                <div class="card-body text-center d-flex flex-column justify-content-center">
                                    <h5 class="my-3">@Model.perfil.Nombre_Usuario</h5>
                                    <h7 class="my-3">@Model.perfil.Email</h7>
                                    <p class="text-muted mb-1">@Model.perfil.NombreRol</p>
                                    <div class="d-flex justify-content-center m-2">
                                        <a href="@Url.Action("CambiarContrasenna","Autenticacion")" type="button" class="btn btn-primary">Cambiar contraseña</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    @if (Model.perfil.ID_Rol != 1)
                    {
                        <div class="col-lg-4 d-flex align-items-stretch" id="tarjetaPerfil">
                            <div class="card mb-4 w-100">
                                <div class="card-body text-center d-flex flex-column justify-content-center">
                                    <h5 class="my-3">@Model.perfil.Nombre</h5>
                                    <p class="text-muted mb-1">@Model.perfil.NombreRol</p>
                                    <div class="d-flex justify-content-center m-2">
                                        <a href="@Url.Action("CambiarContrasenna","Autenticacion")" type="button" class="btn btn-primary">Cambiar contraseña</a>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-8 d-flex align-items-stretch">
                            <div class="card mb-4 w-100">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <h2>Información</h2>
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <p class="mb-0">Nombre completo</p>
                                        </div>
                                        <div class="col-sm-9">
                                            <p class="text-muted mb-0">@Model.perfil.Nombre @Model.perfil.PrimerApellido @Model.perfil.SegundoApellido</p>
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <p class="mb-0">Correo electrónico</p>
                                        </div>
                                        <div class="col-sm-9">
                                            <p class="text-muted mb-0">@Model.perfil.Email</p>
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <p class="mb-0">Fecha de nacimiento</p>
                                        </div>
                                        <div class="col-sm-9">
                                            <p class="text-muted mb-0">@Model.perfil.FechaNacimiento.ToString("dd - MMMM - yyyy", new System.Globalization.CultureInfo("es-MX"))</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </section>
    </div>
}
